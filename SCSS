@mixin myShadows ($x, $y, $blur, $color) {
    text-shadow : $x $y $blur $color;
    box-shadow : $x/2 $y/2 $blur/2 lighten($color, 50);    
} 

.myText {
    @include myShadows(6px 6x 4px #ff0000);
}

